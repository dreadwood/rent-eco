include ../components/card-advantages

mixin section-advantages({ className })
  section.section-advantages(class=className)
    h2.section-advantages__title More than just a car rental
    -
      let advantages = [
        {
          id: "1",
          type: "image",
          img: "/img/advantages-01.jpg"
        },
        {
          id: "2",
          type: "text",
          title: "Wide range of affordable vehicles",
          text: "Get the perfect car for your needs"
        },
        {
          id: "3",
          type: "image",
          img: "/img/advantages-02.jpg"
        },
        {
          id: "4",
          type: "text",
          title: "Better prices and exclusive offers",
          text: "Save big with RentEco’s special deals"
        },
        {
          id: "5",
          type: "image",
          img: "/img/advantages-03.jpg"
        },
        {
          id: "6",
          type: "text",
          title: "Simple booking process",
          text: "Enjoy a convenient and user-friendly booking platform",
        },
        {
          id: "7",
          type: "image",
          img: "/img/advantages-04.jpg"
        },
        {
          id: "8",
          type: "button"
        },
      ]
    .section-advantages__grid
      each it in advantages
        +card-advantages({ ...it })